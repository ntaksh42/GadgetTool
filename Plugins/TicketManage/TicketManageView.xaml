<UserControl x:Class="GadgetTools.Plugins.TicketManage.TicketManageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:GadgetTools.Core.Models"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <!-- Converters -->
        <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
        
        <!-- Expanderのカスタムスタイル -->
        <Style TargetType="Expander">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="BorderBrush" Value="#D1D1D1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <!-- プレビューテキストのスタイル -->
        <Style x:Key="PreviewTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
            <Style.Triggers>
                <Trigger Property="Text" Value="No projects selected">
                    <Setter Property="Foreground" Value="#999"/>
                    <Setter Property="FontStyle" Value="Italic"/>
                </Trigger>
                <Trigger Property="Text" Value="All iterations">
                    <Setter Property="Foreground" Value="#999"/>
                    <Setter Property="FontStyle" Value="Italic"/>
                </Trigger>
                <Trigger Property="Text" Value="All areas">
                    <Setter Property="Foreground" Value="#999"/>
                    <Setter Property="FontStyle" Value="Italic"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="Border" x:Key="ExpanderContentBorder">
            <Setter Property="BorderBrush" Value="#E1E1E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="400"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Global Settings -->
        <Expander Grid.Row="0" Header="Global Settings" IsExpanded="True">
            <Border Style="{StaticResource ExpanderContentBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 共通設定ステータス -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Azure DevOps Config:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,5">
                        <Ellipse Width="10" Height="10" Margin="0,0,5,0">
                            <Ellipse.Fill>
                                <SolidColorBrush Color="{Binding IsSharedConfigured, Converter={StaticResource BooleanToColorConverter}}"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="{Binding Organization}" FontWeight="Medium" Margin="0,0,5,0"/>
                        <TextBlock Text="(" Foreground="Gray"/>
                        <TextBlock Text="{Binding IsSharedConfigured, Converter={StaticResource BooleanToConnectionStatusConverter}}" Foreground="Gray"/>
                        <TextBlock Text=")" Foreground="Gray"/>
                    </StackPanel>
                    <Button Grid.Row="0" Grid.Column="2" Content="⚙ Configure" Width="100" Margin="5,0,0,5" 
                            Click="GlobalSettings_Click" ToolTip="Configure shared Azure DevOps settings"/>
                </Grid>
            </Border>
        </Expander>
        
        
        <!-- クエリ設定 -->
        <Expander Grid.Row="1" Header="Query and Filter Settings" IsExpanded="True">
                <Border Style="{StaticResource ExpanderContentBorder}">
                    <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Projects Row -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Projects:" VerticalAlignment="Top" Margin="0,0,8,3"/>
                <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,0,0,6">
                    <!-- Multi-selection Controls -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Multi-select display area -->
                        <Border Grid.Column="0" BorderBrush="#D1D1D1" BorderThickness="1" Background="White" 
                                 Padding="6,3" MinHeight="24" Margin="0,0,5,0">
                            <Grid>
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                    <ItemsControl ItemsSource="{Binding Projects}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1" 
                                                        CornerRadius="12" Padding="8,3" Margin="0,0,5,2">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding}" FontSize="11" VerticalAlignment="Center"/>
                                                        <Button Content="×" FontSize="10" FontWeight="Bold" 
                                                                Background="Transparent" BorderThickness="0" 
                                                                Foreground="#1976D2" Padding="2,0" Margin="5,0,0,0"
                                                                ToolTip="Remove this project"
                                                                Tag="{Binding}" Click="RemoveProject_Click"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                                <!-- Placeholder text when empty -->
                                <TextBlock Text="Click + to add projects..." FontStyle="Italic" Foreground="#999" 
                                           VerticalAlignment="Center" FontSize="11"
                                           Visibility="{Binding Projects.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                        
                        <!-- Add button only -->
                        <Button Grid.Column="1" Content="+" Width="24" Height="24" FontSize="12" FontWeight="Bold"
                                Background="#4CAF50" Foreground="White" BorderThickness="0"
                                ToolTip="Add projects" Click="SelectProjects_Click"/>
                    </Grid>
                    
                    <!-- Legacy single project input (hidden by default) -->
                    <TextBox Text="{Binding Project}" Visibility="Collapsed" />
                </StackPanel>
                
                <!-- 2行目：Work Item Type と State -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Work Item Type:" VerticalAlignment="Top" Margin="0,3,8,3"/>
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,8,6">
                    <!-- Multi-selection Controls -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Multi-select display area -->
                        <Border Grid.Column="0" BorderBrush="#D1D1D1" BorderThickness="1" Background="White" 
                                 Padding="6,3" MinHeight="24" Margin="0,0,5,0">
                            <Grid>
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                    <ItemsControl ItemsSource="{Binding WorkItemTypes}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#E8F5E8" BorderBrush="#4CAF50" BorderThickness="1" 
                                                         Padding="6,2" Margin="0,0,3,2">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding}" FontSize="10" VerticalAlignment="Center"/>
                                                        <Button Content="×" FontSize="9" FontWeight="Bold" 
                                                                Background="Transparent" BorderThickness="0" 
                                                                Foreground="#388E3C" Padding="2,0" Margin="3,0,0,0"
                                                                ToolTip="Remove this work item type"
                                                                Tag="{Binding}" Click="RemoveWorkItemType_Click"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                                <!-- Placeholder text when empty -->
                                <TextBlock Text="All types" FontStyle="Italic" Foreground="#999" 
                                           VerticalAlignment="Center" FontSize="10"
                                           Visibility="{Binding WorkItemTypes.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                        
                        <!-- Add button only -->
                        <Button Grid.Column="1" Content="+" Width="24" Height="24" FontSize="12" FontWeight="Bold"
                                Background="#4CAF50" Foreground="White" BorderThickness="0"
                                ToolTip="Select work item types" Click="SelectWorkItemTypes_Click"/>
                    </Grid>
                    
                    <!-- Legacy single work item type input (hidden) -->
                    <ComboBox ItemsSource="{Binding AllWorkItemTypes}" SelectedItem="{Binding WorkItemType}" Visibility="Collapsed"/>
                </StackPanel>
                
                <TextBlock Grid.Row="1" Grid.Column="2" Text="State:" VerticalAlignment="Top" Margin="0,3,0,3"/>
                <StackPanel Grid.Row="1" Grid.Column="3" Margin="0,0,0,6">
                    <!-- Multi-selection Controls -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Multi-select display area -->
                        <Border Grid.Column="0" BorderBrush="#D1D1D1" BorderThickness="1" Background="White" 
                                 Padding="6,3" MinHeight="24" Margin="0,0,5,0">
                            <Grid>
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                    <ItemsControl ItemsSource="{Binding States}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#FFF8E1" BorderBrush="#FFC107" BorderThickness="1" 
                                                         Padding="6,2" Margin="0,0,3,2">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding}" FontSize="10" VerticalAlignment="Center"/>
                                                        <Button Content="×" FontSize="9" FontWeight="Bold" 
                                                                Background="Transparent" BorderThickness="0" 
                                                                Foreground="#F57F17" Padding="2,0" Margin="3,0,0,0"
                                                                ToolTip="Remove this state"
                                                                Tag="{Binding}" Click="RemoveState_Click"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                                <!-- Placeholder text when empty -->
                                <TextBlock Text="All states" FontStyle="Italic" Foreground="#999" 
                                           VerticalAlignment="Center" FontSize="10"
                                           Visibility="{Binding States.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                        
                        <!-- Add button only -->
                        <Button Grid.Column="1" Content="+" Width="24" Height="24" FontSize="12" FontWeight="Bold"
                                Background="#FFC107" Foreground="White" BorderThickness="0"
                                ToolTip="Select states" Click="SelectStates_Click"/>
                    </Grid>
                    
                    <!-- Legacy single state input (hidden) -->
                    <ComboBox ItemsSource="{Binding AllStates}" SelectedItem="{Binding State}" Visibility="Collapsed"/>
                </StackPanel>
                
                <!-- 3行目：Iteration と Area -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Iterations:" VerticalAlignment="Top" Margin="0,3,8,3"/>
                <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,8,6">
                    <!-- Multi-selection Controls -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Multi-select display area -->
                        <Border Grid.Column="0" BorderBrush="#D1D1D1" BorderThickness="1" Background="White" 
                                 Padding="6,3" MinHeight="24" Margin="0,0,5,0">
                            <Grid>
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                    <ItemsControl ItemsSource="{Binding Iterations}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="1" 
                                                        CornerRadius="10" Padding="6,2" Margin="0,0,3,2">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding}" FontSize="10" VerticalAlignment="Center"/>
                                                        <Button Content="×" FontSize="9" FontWeight="Bold" 
                                                                Background="Transparent" BorderThickness="0" 
                                                                Foreground="#F57C00" Padding="2,0" Margin="3,0,0,0"
                                                                ToolTip="Remove this iteration"
                                                                Tag="{Binding}" Click="RemoveIteration_Click"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                                <!-- Placeholder text when empty -->
                                <TextBlock Text="All iterations" FontStyle="Italic" Foreground="#999" 
                                           VerticalAlignment="Center" FontSize="10"
                                           Visibility="{Binding Iterations.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                        
                        <!-- Add button only -->
                        <Button Grid.Column="1" Content="+" Width="24" Height="24" FontSize="12" FontWeight="Bold"
                                Background="#FF9800" Foreground="White" BorderThickness="0"
                                ToolTip="Select iterations" Click="SelectIterations_Click"/>
                    </Grid>
                    
                    <!-- Legacy single iteration input (hidden) -->
                    <TextBox Text="{Binding Iteration}" Visibility="Collapsed"/>
                </StackPanel>
                
                <TextBlock Grid.Row="2" Grid.Column="2" Text="Areas:" VerticalAlignment="Top" Margin="0,3,0,3"/>
                <StackPanel Grid.Row="2" Grid.Column="3" Margin="0,0,0,6">
                    <!-- Multi-selection Controls -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Multi-select display area -->
                        <Border Grid.Column="0" BorderBrush="#D1D1D1" BorderThickness="1" Background="White" 
                                 Padding="6,3" MinHeight="24" Margin="0,0,5,0">
                            <Grid>
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                    <ItemsControl ItemsSource="{Binding Areas}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#F3E5F5" BorderBrush="#9C27B0" BorderThickness="1" 
                                                        CornerRadius="10" Padding="6,2" Margin="0,0,3,2">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding}" FontSize="10" VerticalAlignment="Center"/>
                                                        <Button Content="×" FontSize="9" FontWeight="Bold" 
                                                                Background="Transparent" BorderThickness="0" 
                                                                Foreground="#7B1FA2" Padding="2,0" Margin="3,0,0,0"
                                                                ToolTip="Remove this area"
                                                                Tag="{Binding}" Click="RemoveArea_Click"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                                <!-- Placeholder text when empty -->
                                <TextBlock Text="All areas" FontStyle="Italic" Foreground="#999" 
                                           VerticalAlignment="Center" FontSize="10"
                                           Visibility="{Binding Areas.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                        
                        <!-- Add button only -->
                        <Button Grid.Column="1" Content="+" Width="24" Height="24" FontSize="12" FontWeight="Bold"
                                Background="#9C27B0" Foreground="White" BorderThickness="0"
                                ToolTip="Select areas" Click="SelectAreas_Click"/>
                    </Grid>
                    
                    <!-- Legacy single area input (hidden) -->
                    <TextBox Text="{Binding Area}" Visibility="Collapsed"/>
                </StackPanel>
                
                <!-- 4行目：Max Results と Buttons -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Max Results:" VerticalAlignment="Center" Margin="0,3,8,3"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding MaxResults}" Margin="0,3,8,6"/>
                
                <StackPanel Grid.Row="3" Grid.Column="2" Orientation="Horizontal" Margin="0,3,0,6">
                    <Button Content="Test Connection" Width="120" Margin="0,0,10,0" 
                            Command="{Binding TestConnectionCommand}"/>
                    <Button Content="🎯 Advanced" ToolTip="Advanced Filter" Padding="8,3" 
                            Command="{Binding ShowAdvancedFilterCommand}"/>
                    <Button Content="🔍 Global" ToolTip="Global Search" Padding="8,3" Margin="5,0,0,0" 
                            Command="{Binding ShowGlobalSearchCommand}"/>
                </StackPanel>
                        <Button Grid.Row="3" Grid.Column="3" Content="Query Work Items" Margin="0,3,0,6" 
                                Command="{Binding QueryWorkItemsCommand}"/>
                                
                <!-- 5行目：検索条件サマリー -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Current Criteria:" VerticalAlignment="Top" Margin="0,6,8,0" FontWeight="Medium"/>
                <Border Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" 
                        Background="#F0F8FF" BorderBrush="#B0D4F1" BorderThickness="1" 
                        CornerRadius="4" Padding="6" Margin="0,6,0,0">
                    <TextBlock Text="{Binding SearchCriteriaSummary}" 
                               TextWrapping="Wrap" FontSize="11" Foreground="#2C5282"
                               ToolTip="Current search criteria that will be applied to the query"/>
                </Border>
                    </Grid>
                </Border>
            </Expander>
        
        <!-- 結果表示 -->
        <Border Grid.Row="2" BorderBrush="#D1D1D1" BorderThickness="1" Background="White" CornerRadius="4" Margin="0,0,0,10">
                <DockPanel>
                    <Border DockPanel.Dock="Top" Background="#F5F5F5" BorderBrush="#D1D1D1" BorderThickness="0,0,0,1" Padding="15,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Results and Preview" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="▲ Collapse All" x:Name="CollapseAllButton" 
                                        Click="CollapseAll_Click" Margin="0,0,5,0" 
                                        Padding="8,3" FontSize="11" 
                                        ToolTip="Collapse all sections to maximize results area"/>
                                <Button Content="▼ Expand All" x:Name="ExpandAllButton" 
                                        Click="ExpandAll_Click" 
                                        Padding="8,3" FontSize="11"
                                        ToolTip="Expand all sections"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" MinWidth="400"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="2*" MinWidth="300"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左側: テーブル表示 -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- フィルタ機能 -->
                    <Grid Grid.Row="0" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Filter:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Grid.Column="1" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Enter text to filter work items (searches in ID, Type, Title, State, Assigned To)"/>
                        <Button Grid.Column="2" Content="Clear" Width="50" 
                                Margin="5,0,0,0" Command="{Binding ClearFilterCommand}"/>
                        <Button Grid.Column="3" Content="Clear Column Filters" Width="120" 
                                Margin="5,0,0,0" Command="{Binding ClearColumnFiltersCommand}"
                                ToolTip="Clear all column filters"/>
                        <Button Grid.Column="4" Content="Columns..." Width="80" 
                                Margin="5,0,0,0" Command="{Binding ShowColumnVisibilityCommand}"
                                ToolTip="Show/hide columns"/>
                        <Button Grid.Column="5" Content="📊 Chart" Width="70" 
                                Margin="5,0,0,0" Command="{Binding ShowAreaChartCommand}" 
                                ToolTip="エリアごとの集計をチャートで表示"/>
                        <Button Grid.Column="6" Content="🔄 Reset" Width="60" 
                                Margin="5,0,0,0" Command="{Binding ClearDrillDownCommand}" 
                                ToolTip="ドリルダウンフィルタをクリアして元のデータを表示"/>
                        <StackPanel Grid.Column="7" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                            <!-- エラー表示 -->
                            <Border Background="#FFEBEE" BorderBrush="#F44336" BorderThickness="1" 
                                    Padding="5"  Margin="0,0,10,0"
                                    Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="{Binding ErrorMessage}" Foreground="#D32F2F" FontWeight="Medium" FontSize="11"/>
                            </Border>
                            
                            <!-- 進行状況 -->
                            <StackPanel Orientation="Horizontal" 
                                       Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ProgressBar Width="80" Height="14" IsIndeterminate="True" Margin="0,0,5,0"/>
                                <TextBlock Text="Loading..." FontSize="11" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <TextBlock Text="{Binding StatusMessage}" FontSize="11" Foreground="Gray" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- ハイライト設定 -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                        <CheckBox Content="Highlight stale items" IsChecked="{Binding EnableHighlight}" Margin="0,0,10,0"/>
                        <TextBlock Text="Days since last update:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Text="{Binding HighlightDays}" Width="50" ToolTip="Number of days to consider an item stale"/>
                    </StackPanel>
                    
                    <DataGrid Grid.Row="2" ItemsSource="{Binding WorkItemsView}" 
                              SelectedItem="{Binding SelectedWorkItem}"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              GridLinesVisibility="All" HeadersVisibility="All" CanUserAddRows="False"
                              CanUserDeleteRows="False" CanUserReorderColumns="True" CanUserResizeColumns="True"
                              CanUserSortColumns="True" SelectionMode="Single" SelectionUnit="FullRow"
                              MouseDoubleClick="DataGrid_MouseDoubleClick"
                              KeyDown="DataGrid_KeyDown"
                              Style="{StaticResource FilterableDataGridStyle}"
                              x:Name="WorkItemsDataGrid">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <MultiBinding Converter="{StaticResource HighlightConverter}">
                                            <Binding Path="."/>
                                            <Binding Path="DataContext.EnableHighlight" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                            <Binding Path="DataContext.HighlightDays" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                        </MultiBinding>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Fields.WorkItemType}" Width="80"/>
                            <DataGridTextColumn Header="Title" Binding="{Binding Fields.Title}" Width="*" MinWidth="200"/>
                            <DataGridTextColumn Header="State" Binding="{Binding Fields.State}" Width="80"/>
                            <DataGridTextColumn Header="Assigned To" Binding="{Binding Fields.AssignedTo.DisplayName}" Width="120"/>
                            <DataGridTextColumn Header="Priority" Binding="{Binding Fields.Priority}" Width="60"/>
                            <DataGridTextColumn Header="Created" Binding="{Binding Fields.CreatedDate, StringFormat=yyyy-MM-dd}" Width="100"/>
                            <DataGridTextColumn Header="Last Updated" Binding="{Binding Fields.ChangedDate, StringFormat=yyyy-MM-dd HH:mm}" Width="140" 
                                                SortDirection="Descending">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="ToolTip" Value="{Binding Fields.ChangedDate, StringFormat=yyyy年MM月dd日 HH:mm:ss}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
                
                <!-- スプリッター -->
                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                              Background="#E0E0E0" ResizeBehavior="PreviousAndNext"/>
                
                <!-- 右側: チケットプレビュー -->
                <Border Grid.Column="2" BorderBrush="#D1D1D1" BorderThickness="1" Background="White" CornerRadius="4" Margin="5,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- プレビューヘッダー -->
                        <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#D1D1D1" BorderThickness="0,0,0,1" Padding="15,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📋" FontWeight="Bold" Margin="0,0,8,0"/>
                                <TextBlock Text="Ticket Preview" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <wv2:WebView2 Grid.Row="1" x:Name="PreviewWebView" 
                                      Margin="15"
                                      MinHeight="200"
                                      NavigationCompleted="PreviewWebView_NavigationCompleted"/>
                    </Grid>
                </Border>
                    </Grid>
                </DockPanel>
            </Border>
        
        <!-- 出力設定 -->
        <Expander Grid.Row="3" Header="Output Settings" IsExpanded="False">
                <Border Style="{StaticResource ExpanderContentBorder}">
                    <Grid>
                <!-- Markdown設定 -->
                <StackPanel Orientation="Horizontal">
                    <RadioButton Content="Detailed Markdown" IsChecked="{Binding DetailedMarkdown}" Margin="0,0,20,0"/>
                    <RadioButton Content="Table Only" IsChecked="{Binding DetailedMarkdown, Converter={StaticResource BooleanInverseConverter}}" Margin="0,0,20,0"/>
                        <Button Content="Save to File..." Width="100" Command="{Binding SaveResultCommand}"/>
                        <Button Content="🧪 Sample Data" Width="100" Margin="10,0,0,0" Command="{Binding LoadSampleDataCommand}" ToolTip="テスト用のサンプルデータを読み込み"/>
                    </StackPanel>
                    </Grid>
                </Border>
            </Expander>
        
        <!-- ステータス -->
        <StatusBar Grid.Row="4">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Margin="0,0,5,0">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="{Binding IsConnected, Converter={StaticResource BooleanToColorConverter}}"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="{Binding IsConnected, Converter={StaticResource BooleanToConnectionStatusConverter}}"/>
                </StackPanel>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <ProgressBar Width="100" Height="16" IsIndeterminate="True" Margin="0,0,5,0"/>
                    <TextBlock Text="処理中..." FontSize="11"/>
                </StackPanel>
            </StatusBarItem>
            </StatusBar>
    </Grid>
</UserControl>