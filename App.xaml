<Application x:Class="GadgetTools.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:GadgetTools.Core.Models"
             xmlns:converters2="clr-namespace:GadgetTools.Converters"
             StartupUri="MainWindow.xaml"
             DispatcherUnhandledException="Application_DispatcherUnhandledException">
    <Application.Resources>
        <!-- Value Converters -->
        <converters:BooleanInverseConverter x:Key="BooleanInverseConverter"/>
        <converters:BooleanToVisibilityInverseConverter x:Key="BooleanToVisibilityInverseConverter"/>
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
        <converters:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
        <converters:BooleanToConnectionStatusConverter x:Key="BooleanToConnectionStatusConverter"/>
        <converters2:WorkItemHighlightConverter x:Key="HighlightConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Application.Resources>
</Application>