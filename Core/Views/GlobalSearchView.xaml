<UserControl x:Class="GadgetTools.Core.Views.GlobalSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="700">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <Style x:Key="SearchResultItem" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="2,1"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F7FF"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 検索ボックス -->
        <Border Grid.Row="0" Background="White" BorderBrush="#D0D7DE" BorderThickness="1" 
                CornerRadius="6" Margin="10" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="🔍" FontSize="16" VerticalAlignment="Center" 
                           Foreground="#6E7781" Margin="0,0,8,0"/>
                
                <TextBox Grid.Column="1" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="14" BorderThickness="0" Background="Transparent"
                         VerticalAlignment="Center" x:Name="SearchTextBox"
                         KeyDown="SearchTextBox_KeyDown"/>
                
                <Button Grid.Column="2" Content="🎯" ToolTip="Advanced Filter" 
                        Background="Transparent" BorderThickness="0" Padding="8,4"
                        Command="{Binding ShowAdvancedFilterCommand}"/>
                
                <Button Grid.Column="3" Content="❌" ToolTip="Clear" 
                        Background="Transparent" BorderThickness="0" Padding="8,4"
                        Command="{Binding ClearSearchCommand}"/>
            </Grid>
        </Border>
        
        <!-- フィルタとステータス -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- プラグインフィルタ -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="Show:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ItemsControl ItemsSource="{Binding PluginFilters}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Name}" IsChecked="{Binding IsEnabled}" 
                                      Margin="0,0,15,0" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            
            <!-- 検索ステータス -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <ProgressBar Width="100" Height="16" IsIndeterminate="True" 
                            Visibility="{Binding IsSearching, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Margin="0,0,10,0"/>
                <TextBlock Text="{Binding StatusText}" VerticalAlignment="Center" 
                           Foreground="#6E7781" FontSize="12"/>
            </StackPanel>
        </Grid>
        
        <!-- 検索結果 -->
        <Border Grid.Row="2" BorderBrush="#D0D7DE" BorderThickness="1" CornerRadius="6" 
                Margin="10,0,10,10" Background="White">
            <Grid>
                <ListBox ItemsSource="{Binding SearchResults}" SelectedItem="{Binding SelectedResult}"
                         ItemContainerStyle="{StaticResource SearchResultItem}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         BorderThickness="0" Background="Transparent"
                         MouseDoubleClick="ResultList_MouseDoubleClick">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- プラグインアイコン -->
                                <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" 
                                        Background="{Binding PluginColor}" Width="4" CornerRadius="2" 
                                        Margin="0,0,12,0" VerticalAlignment="Stretch"/>
                                
                                <!-- タイトル行 -->
                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Text="{Binding Icon}" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14" 
                                              TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding Id, StringFormat='#{0}'}" 
                                              Foreground="#6E7781" FontSize="12" Margin="8,0,0,0"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <!-- プラグイン名とタイプ -->
                                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal">
                                    <Border Background="{Binding PluginColor}" CornerRadius="10" Padding="6,2">
                                        <TextBlock Text="{Binding PluginName}" Foreground="White" 
                                                  FontSize="10" FontWeight="Bold"/>
                                    </Border>
                                    <TextBlock Text="{Binding Type}" Foreground="#6E7781" FontSize="11" 
                                              Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <!-- 説明 -->
                                <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" 
                                          Text="{Binding Description}" TextWrapping="Wrap" 
                                          Foreground="#656D76" FontSize="12" Margin="0,4,0,0"/>
                                
                                <!-- メタ情報 -->
                                <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" 
                                           Orientation="Horizontal" Margin="0,6,0,0">
                                    <TextBlock Text="{Binding CreatedBy}" Foreground="#6E7781" FontSize="11"/>
                                    <TextBlock Text=" • " Foreground="#6E7781" FontSize="11"/>
                                    <TextBlock Text="{Binding CreatedDate, StringFormat='yyyy/MM/dd'}" 
                                              Foreground="#6E7781" FontSize="11"/>
                                    <TextBlock Text=" • " Foreground="#6E7781" FontSize="11"/>
                                    <TextBlock Text="{Binding Status}" Foreground="{Binding StatusColor}" FontSize="11"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- 検索結果なしメッセージ -->
                <StackPanel Visibility="{Binding HasNoResults, Converter={StaticResource BooleanToVisibilityConverter}}"
                           HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="🔍" FontSize="48" HorizontalAlignment="Center" 
                              Foreground="#D0D7DE" Margin="0,0,0,16"/>
                    <TextBlock Text="No results found" FontSize="16" HorizontalAlignment="Center" 
                              Foreground="#6E7781" Margin="0,0,0,8"/>
                    <TextBlock Text="Try adjusting your search terms or filters" 
                              HorizontalAlignment="Center" Foreground="#8B949E" FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 検索履歴 -->
        <Expander Grid.Row="3" Header="Recent Searches" Margin="10" IsExpanded="False">
            <ItemsControl ItemsSource="{Binding RecentSearches}" Margin="10,5">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding SearchText}" 
                                Command="{Binding DataContext.LoadHistoryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Background="#F6F8FA" BorderBrush="#D0D7DE" 
                                Padding="8,4" Margin="4,2" FontSize="11"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Expander>
    </Grid>
</UserControl>