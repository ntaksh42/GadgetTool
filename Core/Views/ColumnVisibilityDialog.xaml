<Window x:Class="GadgetTools.Core.Views.ColumnVisibilityDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d" 
        Title="Column Visibility Settings" 
        Width="350" Height="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="300" MinHeight="300">
    
    <Window.Resources>
        <Style TargetType="CheckBox" x:Key="ColumnCheckBoxStyle">
            <Setter Property="Margin" Value="5,3"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style TargetType="Button" x:Key="ActionButtonStyle">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Select columns to display:" 
                   FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
        
        <!-- Column List -->
        <Border Grid.Row="1" BorderBrush="#D1D1D1" BorderThickness="1" Background="White" CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="10">
                <ItemsControl ItemsSource="{Binding Columns}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsVisible}" 
                                      Content="{Binding DisplayName}"
                                      Style="{StaticResource ColumnCheckBoxStyle}"
                                      ToolTip="{Binding ColumnName}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        
        <!-- Quick Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="Show All" Command="{Binding ShowAllColumnsCommand}" 
                    Style="{StaticResource ActionButtonStyle}"/>
            <Button Content="Reset to Default" Command="{Binding ResetToDefaultCommand}" 
                    Style="{StaticResource ActionButtonStyle}"/>
        </StackPanel>
        
        <!-- Dialog Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Click="OK_Click" IsDefault="True" 
                    Style="{StaticResource ActionButtonStyle}" 
                    Background="#007ACC" Foreground="White"/>
            <Button Content="Cancel" Click="Cancel_Click" IsCancel="True" 
                    Style="{StaticResource ActionButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>