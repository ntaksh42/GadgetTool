<Window x:Class="GadgetTools.Core.Views.AreaChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ワークアイテム集計チャート" Height="600" Width="900"
        MinHeight="400" MinWidth="600">
    
    <Window.Resources>
        <Style x:Key="ChartButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4472C4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5a82d4"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3862b4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="0,0,0,1" Padding="15,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📊" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding ChartTitle}" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding TotalItemsText}" FontSize="12" Foreground="#6c757d" VerticalAlignment="Center" Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="1" Background="#ffffff" BorderBrush="#dee2e6" BorderThickness="0,0,0,1" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Filter Controls -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="分類:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox x:Name="CategoryTypeComboBox" 
                              Style="{StaticResource FilterComboBoxStyle}"
                              SelectedItem="{Binding SelectedCategoryType, Mode=TwoWay}">
                        <ComboBoxItem Content="機能別" Tag="Feature"/>
                        <ComboBoxItem Content="優先度別" Tag="Priority"/>
                        <ComboBoxItem Content="エリア別" Tag="Area"/>
                        <ComboBoxItem Content="種類別" Tag="WorkItemType"/>
                        <ComboBoxItem Content="状態別" Tag="State"/>
                        <ComboBoxItem Content="担当者別" Tag="AssignedTo"/>
                    </ComboBox>
                    
                    <TextBlock Text="集計タイプ:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                    <ComboBox x:Name="AggregationTypeComboBox" 
                              Style="{StaticResource FilterComboBoxStyle}"
                              SelectedItem="{Binding SelectedAggregationType, Mode=TwoWay}">
                        <ComboBoxItem Content="総数" Tag="TotalCount"/>
                        <ComboBoxItem Content="Active数" Tag="ActiveCount"/>
                        <ComboBoxItem Content="Resolved数" Tag="ResolvedCount"/>
                        <ComboBoxItem Content="Closed数" Tag="ClosedCount"/>
                        <ComboBoxItem Content="Bug数" Tag="BugCount"/>
                        <ComboBoxItem Content="Task数" Tag="TaskCount"/>
                        <ComboBoxItem Content="User Story数" Tag="UserStoryCount"/>
                        <ComboBoxItem Content="Feature数" Tag="FeatureCount"/>
                        <ComboBoxItem Content="高優先度数" Tag="HighPriorityCount"/>
                        <ComboBoxItem Content="中優先度数" Tag="MediumPriorityCount"/>
                        <ComboBoxItem Content="低優先度数" Tag="LowPriorityCount"/>
                    </ComboBox>
                    
                    <TextBlock Text="チャートタイプ:" VerticalAlignment="Center" Margin="20,0,5,0"/>
                    <ComboBox x:Name="ChartTypeComboBox" 
                              Style="{StaticResource FilterComboBoxStyle}"
                              SelectedItem="{Binding SelectedChartType, Mode=TwoWay}">
                        <ComboBoxItem Content="縦棒グラフ" Tag="Bar"/>
                        <ComboBoxItem Content="横棒グラフ" Tag="HorizontalBar"/>
                    </ComboBox>
                    
                    <CheckBox Content="値を表示" IsChecked="{Binding ShowValues}" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <CheckBox Content="パーセンテージ" IsChecked="{Binding ShowPercentages}" VerticalAlignment="Center" Margin="15,0,0,0"/>
                    <CheckBox Content="優先度別内訳" IsChecked="{Binding ShowPriorityBreakdown}" VerticalAlignment="Center" Margin="15,0,0,0" ToolTip="棒グラフ内で優先度別の内訳を表示"/>
                </StackPanel>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="📊 更新" Command="{Binding RefreshCommand}" Style="{StaticResource ChartButtonStyle}"/>
                    <Button Content="📤 エクスポート" Command="{Binding ExportCommand}" Style="{StaticResource ChartButtonStyle}"/>
                    <Button Content="🔄 リセット" Command="{Binding ResetCommand}" Style="{StaticResource ChartButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Chart Content -->
        <Grid Grid.Row="2" Background="#ffffff">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Chart Area -->
            <Border Grid.Column="0" Margin="20" BorderBrush="#dee2e6" BorderThickness="1" CornerRadius="4">
                <ScrollViewer x:Name="ChartScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Canvas x:Name="ChartCanvas" Background="White" MinHeight="300">
                        <!-- Chart will be drawn here programmatically -->
                    </Canvas>
                </ScrollViewer>
            </Border>
            
            <!-- Legend and Details Panel -->
            <Border Grid.Column="1" Width="250" Margin="0,20,20,20" BorderBrush="#dee2e6" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Legend Title -->
                    <Border Grid.Row="0" Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="0,0,0,1" Padding="10,8">
                        <TextBlock Text="詳細情報" FontWeight="Bold" FontSize="14"/>
                    </Border>
                    
                    <!-- Details List -->
                    <ListBox Grid.Row="1" x:Name="DetailsListBox" 
                             ItemsSource="{Binding Aggregations}" 
                             SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                             BorderThickness="0" Padding="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8,6" Margin="2" Background="Transparent" CornerRadius="3">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#f8f9fa"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding CategoryName}" FontWeight="Medium" FontSize="12"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TotalCount}" FontWeight="Bold" FontSize="12" Foreground="#4472C4"/>
                                        <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding CategoryPath}" FontSize="10" Foreground="#6c757d" TextTrimming="CharacterEllipsis"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Summary -->
                    <Border Grid.Row="2" Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="0,1,0,0" Padding="10,8">
                        <StackPanel>
                            <TextBlock Text="集計サマリー" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding SummaryText}" FontSize="11" Foreground="#6c757d" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="0,1,0,0" Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding StatusText}" FontSize="11" Foreground="#6c757d" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="{Binding LastUpdatedText}" FontSize="11" Foreground="#6c757d" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>