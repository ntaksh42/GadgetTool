<UserControl x:Class="GadgetTools.Core.Views.AzureDevOpsSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="600">
    
    <GroupBox Header="Azure DevOps Global Configuration" Margin="10">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Organization:" VerticalAlignment="Center" Margin="0,0,10,5"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Organization, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,0,5" ToolTip="Azure DevOps organization name (e.g., 'mycompany')"/>
            
            <TextBlock Grid.Row="1" Grid.Column="0" Text="PAT Token:" VerticalAlignment="Center" Margin="0,0,10,5"/>
            <PasswordBox Grid.Row="1" Grid.Column="1" x:Name="PatTokenBox" Margin="0,0,0,5"
                         ToolTip="Personal Access Token with appropriate permissions"/>
            
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,10">
                <Button Content="Test Connection" Width="120" Margin="0,0,10,0" Click="TestConnection_Click"/>
                <Button Content="Save" Width="80" Margin="0,0,10,0" Click="Save_Click"/>
                <Ellipse Width="12" Height="12" Margin="10,0,5,0">
                    <Ellipse.Fill>
                        <SolidColorBrush Color="{Binding IsConfigured, Converter={StaticResource BooleanToColorConverter}}"/>
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock Text="{Binding IsConfigured, Converter={StaticResource BooleanToConnectionStatusConverter}}" VerticalAlignment="Center"/>
            </StackPanel>
            
            <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                       Text="Note: These settings will be shared across TicketManager and PullRequestManager plugins."
                       FontStyle="Italic" FontSize="11" Foreground="Gray"/>
        </Grid>
    </GroupBox>
</UserControl>